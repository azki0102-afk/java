<!-- IMAGE MODAL -->
<div id="imgModal" onclick="this.style.display='none'">
  <img id="modalImg" src="">
</div>

<script>
  // LOADING 10 DETIK
  setTimeout(()=>{document.getElementById("loader").style.display="none"},10000);

  // ANIMASI GALLERY SAAT SCROLL
  const drift=document.getElementById("driftSection");
  window.addEventListener("scroll",()=>{
    if(drift.getBoundingClientRect().top<innerHeight-100){
      drift.classList.add("is-visible");
    }
  });

  // CLICK TO ENLARGE IMAGE
  const images = document.querySelectorAll('.drift-gallery img');
  const modal = document.getElementById('imgModal');
  const modalImg = document.getElementById('modalImg');

  images.forEach(img=>{
    img.addEventListener('click', ()=>{
      modal.style.display = 'flex';
      modalImg.src = img.src;
    });
  });
</script>

